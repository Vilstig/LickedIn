@model LickedIn.Models.Competency

@{
    ViewData["Title"] = "Edytuj poziom";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">Aktualizacja kompetencji</h4>
                </div>
                <div class="card-body">
                    
                    <div class="mb-3">
                        <label class="text-muted small">Pracownik</label>
                        <div class="fs-5 fw-bold">@ViewBag.EmployeeName</div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="text-muted small">Umiejętność</label>
                        <div class="fs-5 fw-bold">@ViewBag.SkillName</div>
                    </div>

                    <hr />

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-4">
                            <label asp-for="Level" class="control-label fw-bold mb-1">Nowy Poziom</label>
                            <input asp-for="Level" class="form-control form-control-lg" type="number" min="1" max="10" />
                            <span asp-validation-for="Level" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <input type="submit" value="Zapisz zmiany" class="btn btn-warning" />
                            <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary">Anuluj</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}