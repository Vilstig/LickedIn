@model LickedIn.Models.ViewModels.ProjectCreateViewModel

@{
    ViewData["Title"] = "Utwórz Projekt";
    var skills = (List<LickedIn.Models.SkillType>)ViewData["Skills"];
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Kreator Projektu</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" id="projectForm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <h5 class="text-secondary border-bottom pb-2">1. Dane podstawowe</h5>
                <div class="row mt-3">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Nazwa Projektu</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="ManagerId" class="form-label fw-bold">Kierownik</label>
                        <select asp-for="ManagerId" class="form-control" asp-items="ViewBag.ManagerId">
                            <option value="" disabled selected>-- Wybierz --</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="StartDate" class="form-label fw-bold">Data Startu</label>
                        <input asp-for="StartDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="EndDate" class="form-label fw-bold">Data Końca</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4 border-bottom pb-2">
                    <h5 class="text-secondary mb-0">2. Definicja Zespołu</h5>
                    <button type="button" class="btn btn-primary btn-sm" onclick="addMemberCard()">
                        <i class="bi bi-person-plus-fill"></i> Dodaj Członka Zespołu
                    </button>
                </div>
                
                <div class="alert alert-info mt-2 small">
                    <i class="bi bi-info-circle"></i> Zdefiniuj role (np. "Programista", "Tester") i przypisz do nich dowolną liczbę wymaganych umiejętności.
                </div>

                <div id="membersContainer" class="mt-3">
                    </div>

                <hr class="mt-5"/>
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-magic"></i> Utwórz projekt i dobierz ludzi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Przygotowanie danych słownikowych do JS
        const availableSkills = @Json.Serialize(skills.Select(s => new { value = s.Id, text = s.Name }));
        let memberIndex = 0;

        function addMemberCard() {
            const container = document.getElementById('membersContainer');
            
            const card = document.createElement('div');
            card.className = 'card mb-3 border-secondary member-card';
            card.setAttribute('data-index', memberIndex);

            card.innerHTML = `
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <span class="fw-bold text-dark">Wakat #${memberIndex + 1}</span>
                    <button type="button" class="btn btn-danger btn-sm" onclick="removeMember(this)">
                        <i class="bi bi-x-lg"></i> Usuń rolę
                    </button>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Nazwa stanowiska (opcjonalnie)</label>
                        <input name="TeamMembers[${memberIndex}].RoleName" class="form-control" placeholder="np. Senior Backend Dev" />
                    </div>
                    
                    <h6 class="text-muted border-bottom pb-1">Wymagane umiejętności dla tej osoby:</h6>
                    <table class="table table-sm table-borderless">
                        <tbody id="skillsList_${memberIndex}">
                            </tbody>
                    </table>
                    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="addSkillRow(${memberIndex})">
                        <i class="bi bi-plus"></i> Dodaj umiejętność
                    </button>
                </div>
            `;

            container.appendChild(card);
            
            // Automatycznie dodaj pierwszy wiersz umiejętności dla wygody
            addSkillRow(memberIndex);
            
            memberIndex++;
        }

        function addSkillRow(currentMemberIdx) {
            const tbody = document.getElementById(`skillsList_${currentMemberIdx}`);
            // Policz ile już jest wierszy w tej tabeli, żeby nadać indeks
            const skillIndex = tbody.children.length;

            let options = '<option value="" disabled selected>-- Wybierz umiejętność --</option>';
            availableSkills.forEach(s => options += `<option value="${s.value}">${s.text}</option>`);

            const tr = document.createElement('tr');
            tr.innerHTML = `
                <td width="60%">
                    <select name="TeamMembers[${currentMemberIdx}].RequiredSkills[${skillIndex}].SkillTypeId" class="form-select form-select-sm" required>
                        ${options}
                    </select>
                </td>
                <td width="30%">
                    <input type="number" name="TeamMembers[${currentMemberIdx}].RequiredSkills[${skillIndex}].Level" 
                           class="form-control form-control-sm" placeholder="Poziom" min="1" max="10" value="1" required />
                </td>
                <td width="10%" class="text-end">
                    <button type="button" class="btn btn-outline-danger btn-sm border-0" onclick="this.closest('tr').remove()">
                        <i class="bi bi-trash"></i>
                    </button>
                </td>
            `;
            tbody.appendChild(tr);
        }

        function removeMember(btn) {
            const card = btn.closest('.member-card');
            card.remove();
            // Uwaga: W idealnym świecie powinniśmy przenumerować indeksy [0], [1]...
            // ASP.NET Core MVC Model Binder zazwyczaj radzi sobie z dziurami w indeksach,
            // ale jeśli formularz się nie przesyła poprawnie, trzeba dodać funkcję reindex().
            reindexMembers();
        }

        // Funkcja naprawiająca indeksy po usunięciu elementu ze środka
        function reindexMembers() {
            const cards = document.querySelectorAll('.member-card');
            cards.forEach((card, mIdx) => {
                // Aktualizuj nagłówek
                card.querySelector('.fw-bold').innerText = `Wakat #${mIdx + 1}`;
                
                // Aktualizuj input RoleName
                const roleInput = card.querySelector('input[name*="RoleName"]');
                if(roleInput) roleInput.name = `TeamMembers[${mIdx}].RoleName`;

                // Aktualizuj tabelę skilli
                const tbody = card.querySelector('tbody');
                tbody.id = `skillsList_${mIdx}`;
                
                // Aktualizuj przycisk dodawania skilla
                const addSkillBtn = card.querySelector('button[onclick*="addSkillRow"]');
                addSkillBtn.setAttribute('onclick', `addSkillRow(${mIdx})`);

                // Aktualizuj same skille wewnątrz
                const rows = tbody.querySelectorAll('tr');
                rows.forEach((row, sIdx) => {
                    const select = row.querySelector('select');
                    const input = row.querySelector('input[type="number"]');
                    if(select) select.name = `TeamMembers[${mIdx}].RequiredSkills[${sIdx}].SkillTypeId`;
                    if(input) input.name = `TeamMembers[${mIdx}].RequiredSkills[${sIdx}].Level`;
                });
            });
            // Reset licznika globalnego (niekonieczne przy pełnym reindexie, ale bezpieczne)
            memberIndex = cards.length;
        }

        // Dodaj jedną pustą kartę na start
        document.addEventListener("DOMContentLoaded", () => {
            addMemberCard();
        });
    </script>
}