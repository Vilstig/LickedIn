@model LickedIn.Models.Project

@{
    ViewData["Title"] = "Utwórz Projekt";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Rozpocznij nowy projekt</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label fw-bold">Nazwa Projektu</label>
                            <input asp-for="Name" class="form-control" placeholder="Wprowadź nazwę..." />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ManagerId" class="control-label fw-bold">Kierownik Projektu</label>
                            <select asp-for="ManagerId" class="form-control" asp-items="ViewBag.ManagerId">
                                <option disabled selected>-- Wybierz Kierownika --</option>
                            </select>
                            <span asp-validation-for="ManagerId" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartDate" class="control-label fw-bold">Data Startu</label>
                                <input asp-for="StartDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="EndDate" class="control-label fw-bold">Data Końca (opcjonalnie)</label>
                                <input asp-for="EndDate" type="date" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="alert alert-info mt-2">
                            <i class="bi bi-info-circle"></i> Zespół projektowy zostanie dobrany automatycznie po utworzeniu projektu.
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            @* To jest realizacja "Anulowania tworzenia projektu" z diagramu *@
                            <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                            <input type="submit" value="Utwórz i dobierz zespół" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}