@model LickedIn.Models.Project

@{
    ViewData["Title"] = "Edytuj Projekt";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">Edycja projektu: @Model.Name</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label fw-bold">Nazwa Projektu</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ManagerId" class="control-label fw-bold">Kierownik Projektu</label>
                            <select asp-for="ManagerId" class="form-control" asp-items="ViewBag.ManagerId">
                                <option value="" disabled>-- Wybierz kierownika --</option>
                            </select>
                            <span asp-validation-for="ManagerId" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartDate" class="control-label fw-bold">Data Startu</label>
                                <input asp-for="StartDate" type="date" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="EndDate" class="control-label fw-bold">Data Ko≈Ñca</label>
                                <input asp-for="EndDate" type="date" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-3">
                            <input type="submit" value="Zapisz zmiany" class="btn btn-warning" />
                            <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}