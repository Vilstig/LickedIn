@model LickedIn.Models.Employee

@{
    ViewData["Title"] = "Szczegóły Pracownika";
}

<div class="container">
    <h1>@Model.FirstName @Model.LastName</h1>
    
    <div class="card mb-4">
        <div class="card-header">Dane osobowe</div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Telefon</dt>
                <dd class="col-sm-9">@Model.PhoneNumber</dd>

                <dt class="col-sm-3">PESEL</dt>
                <dd class="col-sm-9">@Model.Pesel</dd>
            </dl>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edytuj dane</a>
            <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>Kompetencje</span>
            <div>
                <a asp-controller="Competency" asp-action="Create" asp-route-employeeId="@Model.Id" class="btn btn-success btn-sm">
                    + Przypisz umiejętność
                </a>
                <a asp-controller="SkillType" asp-action="Create" class="btn btn-outline-primary btn-sm">
                    + Nowy typ umiejętności
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Competencies != null && Model.Competencies.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Umiejętność</th>
                            <th>Poziom</th>
                            <th>Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Competencies)
                        {
                            <tr>
                                <td>@item.SkillType?.Name</td>
                                <td>@item.Level</td>
                                <td>
                                    <a asp-controller="Competency" asp-action="Edit" asp-route-id="@item.Id" class="text-primary mx-2">
                                        Edytuj
                                    </a>
                                    <a asp-controller="Competency" asp-action="Delete" asp-route-id="@item.Id" class="text-danger mx-2">
                                        Usuń
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">Ten pracownik nie ma jeszcze przypisanych żadnych kompetencji.</p>
            }
        </div>
    </div>
</div>