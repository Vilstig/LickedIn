@model LickedIn.Models.Employee

@{
    ViewData["Title"] = "Usuń Pracownika";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Potwierdzenie usunięcia</h3>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-danger text-center mb-4">Czy na pewno chcesz usunąć tego pracownika z systemu?</h5>
                    
                    <div class="alert alert-light border text-center">
                        <h2 class="display-6">@Model.FirstName @Model.LastName</h2>
                        <p class="text-muted mb-0">PESEL: @Model.Pesel</p>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">Nie, wróć</a>
                            <input type="submit" value="Tak, usuń" class="btn btn-danger btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>