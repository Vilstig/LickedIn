@model IEnumerable<LickedIn.Models.SkillType>

@{
    ViewData["Title"] = "Lista Umiejętności";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Słownik Umiejętności</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Dodaj nową
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Nazwa umiejętności</th>
                        <th class="text-end">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="fw-bold">@item.Name</span>
                            </td>
                            <td class="text-end">
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                    Usuń
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center mt-3">
                    Brak zdefiniowanych umiejętności w systemie. Dodaj pierwszą!
                </div>
            }
        </div>
    </div>
</div>