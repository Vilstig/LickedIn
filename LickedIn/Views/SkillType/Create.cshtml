@model LickedIn.Models.SkillType

@{
    ViewData["Title"] = "Dodaj Umiejętność";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Nowa definicja umiejętności</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label fw-bold mb-1">Nazwa</label>
                            <input asp-for="Name" class="form-control" placeholder="np. Język Angielski, Python, BHP" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <input type="submit" value="Utwórz" class="btn btn-success" />
                            <a asp-action="Index" class="btn btn-secondary">Anuluj i wróć</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}