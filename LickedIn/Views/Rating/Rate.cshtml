@model LickedIn.Models.MonthlyRating

@{
    ViewData["Title"] = "Formularz Oceny";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4>Ocena pracownika</h4>
                </div>
                <div class="card-body">
                    <p>Pracownik: <strong>@ViewBag.EmployeeName</strong></p>
                    <p>Projekt: <strong>@ViewBag.ProjectName</strong></p>
                    <hr />
                    
                    <form asp-action="Rate">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ProjectAssignmentId" />
                        <input type="hidden" asp-for="Date" />

                        <div class="form-group mb-3">
                            <label asp-for="Score" class="control-label fw-bold">Ocena (1-10)</label>
                            <input asp-for="Score" type="number" min="1" max="10" class="form-control" />
                            <span asp-validation-for="Score" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Comment" class="control-label fw-bold">Komentarz (zostanie zanonimizowany)</label>
                            <textarea asp-for="Comment" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <input type="submit" value="Zapisz OcenÄ™" class="btn btn-success" />
                            <a href="javascript:history.back()" class="btn btn-secondary">Anuluj</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>